<ul class="categories" hx-target=".explores" hx-swap="outerHTML">
    {{#each categories}}
    <li hx-get="/explore/{{this.id}}">
        <h2>{{this.name}}</h2>
    </li>
    {{/each}}
</ul>

<ul class="explores" hx-target="#container" hx-push-url="true">
    {{#each explores}}
    <li>
        <img src="/public/images/{{this.image_path}}" alt="{{this.name}}">
        <div class="info">
            <h2>{{this.name}}</h2>
            <p>{{this.discription}}</p>
        </div>
    </li>
    {{/each}}
</ul>

<style>
    .categories {
        display: flex;
        justify-content: space-around;
        list-style: none;
        margin: 0;
        padding: 0;
        margin-bottom: 5rem;
    }

    .categories li {
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: rgba(170, 0, 0, 0.25);
        border: 1px solid #A00;
        border-radius: 3.125rem;
        width: 9.375rem;
        height: 3.063rem;
        cursor: pointer;
    }

    .categories li:hover {
        background-color: #A00;
    }

    .categories li h2 {
        font-size: 1rem;
        font-weight: 600;
    }

    .categories li:nth-child(2){
        border: 1px solid #002FD3;
        background: rgba(0, 47, 211, 0.25);
    }

    .categories li:nth-child(2):hover{
        background: #002FD3;
    }

    .categories li:nth-child(3){
        border: 1px solid #00A71B;
        background: rgba(0, 167, 27, 0.25);
    }

    .categories li:nth-child(3):hover{
        background: #00A71B;
    }

    .categories li:nth-child(4){
        border: 1px solid #DD6A00;
        background: rgba(221, 106, 0, 0.25);
    }

    .categories li:nth-child(4):hover{
        background: #DD6A00;
    }

    .categories li:nth-child(5){
        border: 1px solid #7800D6;
        background: rgb(120, 0, 214, 0.25);
    }

    .categories li:nth-child(5):hover{
        background: #7800D6;
    }

    .explores {
        display: flex;
        flex-direction: column;
        list-style: none;
        gap: 3rem;
        margin: 0;
        padding: 0;
    }

    .explores li {
        display: flex;
        gap: 1rem;
        width: 50rem;
    }

    .explores li:nth-child(even){
        align-self: flex-end;
        text-align: right;
        flex-direction: row-reverse;
    }

    .explores li img{
        width: 15.063rem;
        height: 10.063rem;
        object-fit: cover;
        object-position: 0 20%;
    }

    .explores li .info {
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 1rem;
    }

    .explores li h2 {
        font-size: 3rem;
        font-weight: 900;
        margin: 0;
    }

    .explores li p {
        font-size: 1rem;
        font-weight: 400;
        margin: 0;
    }
</style>