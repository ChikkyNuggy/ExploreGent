<div class="walk-container">
    <div class="map" id="map" >
        <script>
            let routes = {{{json route}}}
        </script>
        <script src="/public/scripts/walk.js" type="module"></script>
    </div>
    <div class="routes">
        <ul hx-target=".walk-container" hx-swap="outerHTML">
            {{#each route}}
            <li tabindex="0" hx-get="walk/routes/{{this.id}}" hx-trigger="click">
                <h2>{{this.name}}</h2>
            </li>
            {{/each}}
        </ul>
    </div>
</div>



<style>
    .walk-container {
        display: flex;
        gap: 2rem;
        width: 100%;
        height: 100vh;
        margin: 0;
    }

    .map {
        flex: 2;
        border: 1px solid var(--white);
    }

    .routes {
        flex: 1;
        border: 1px solid var(--white);
    }

    .routes ul {
        list-style: none;
        height: 100vh;
        overflow: auto;
        margin: 0;
        padding: 0;
    }

    .routes li {
        padding: 2rem;
        width: 75%;
        margin: 0 auto;
        border-bottom: 1px solid var(--white);
        cursor: pointer;
    }

    .routes li:focus h2,
    .routes li:hover h2{
        animation: shift .5s forwards ease-in-out;
    }

    .routes li:last-child {
        border-bottom: none;
    }

    .routes li h2 {
        margin: 0;
        animation: unshift .5s forwards ease-in-out;
    }

    @keyframes shift {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(1rem);
        }
    }

    @keyframes unshift {
        0% {
            transform: translateX(1rem);
        }
        100% {
            transform: translateX(0);
        }
    }
</style>